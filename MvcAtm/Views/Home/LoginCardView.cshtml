@model MVCCashMachine.Models.CardModel
@{
    ViewBag.Title = "Card name";
}

<h2>Please enter your card number</h2>
@{
    using (Html.BeginForm("CheckCardNumber", "Home"))
    {
        <div>
            <p>
                @Html.TextBoxFor(m => m.CardNumber, new {@class = "cardNumberInput form-control"})
            </p>
        </div>
        <input type="submit" class="btn btn-default" value="OK" />
        <input type="button" class="clearCardNumberButton btn btn-default" value="Clear" />
    }
}


