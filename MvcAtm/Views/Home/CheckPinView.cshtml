@model MVCCashMachine.Models.PinModel
@{
    ViewBag.Title = "Pin name";
}

<h2>Please enter your card pin</h2>
@{
    using (Html.BeginForm("CheckPin", "Home"))
    {
        <div>
            <p>
                @Html.PasswordFor(m => m.Pin, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Pin, "", new { @class = "text-danger" })
            </p>
        </div>
        <input type="submit" class="btn btn-default" value="OK" />
        <input type="button" class="clearPinButton btn btn-default" value="Clear" />
        @Html.HiddenFor(m => m.CurrentCardNumber)
    }
    using (Html.BeginForm("LoginCard", "Home"))
    {
        <input type="submit" class="btn btn-default" value="Exit" />
    }
}
